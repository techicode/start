<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btn_siguiente"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".listaSanguches">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="5dp"
                android:text="Seleccione tipo de sanguches"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/rb_listaProductos"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioGroup
                android:id="@+id/rb_listaProductos"
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginEnd="26dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RadioButton
                    android:id="@+id/rb_travagante"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TRAVAGANTE: Lechuga, Tomate, Palta, Queso, Papa Hilo, Pasta Maní y Mayo" />

                <RadioButton
                    android:id="@+id/rb_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="START: Tocino, Tomate, Chucrut, Cebolla Caramelizada, Rúcula y Mayo" />

                <RadioButton
                    android:id="@+id/rb_stellar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="STELLAR: Chucrut, Salsa Startara y Mayo" />

                <RadioButton
                    android:id="@+id/rb_americano"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="AMERICANO: Tocino, Cebolla Caramelizada, Queso, Huevo y Mayo" />

                <RadioButton
                    android:id="@+id/rb_luco_palton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="LUCO PALTÓN: Palta, Queso Mantecoso y Mayo" />

                <RadioButton
                    android:id="@+id/rb_antojat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="ANTOJA-T: Tocino, Tomate, Queso y Mayo" />

                <RadioButton
                    android:id="@+id/rb_catalan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="CATALÁN: Palmito, Palta y Mayo" />

                <RadioButton
                    android:id="@+id/rb_dinamico"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="DINÁMICO: Tomate, Chucrut, Palta y Mayo" />

                <RadioButton
                    android:id="@+id/rb_italia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="ITALIA: Tomate, Palta y Mayo" />

                <RadioButton
                    android:id="@+id/rb_chacarero"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="CHACARERO: Tomate, Poroto Verde, Ají y Mayo" />

                <RadioButton
                    android:id="@+id/rb_completo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="COMPLETO: Tomate, Chucrut y Mayo" />

                <RadioButton
                    android:id="@+id/rb_luco"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="LUCO: Queso Mantecoso y Mayo" />

                <RadioButton
                    android:id="@+id/rb_solito"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="SOLITO: Tu Proteína Favorita y Mayo" />

            </RadioGroup>

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Siguiente"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rb_listaProductos"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toStartOf="@+id/rb_listaProductos"
                app:layout_constraintHorizontal_bias="0.88"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/travagante3"
                app:srcCompat="@drawable/microsoftteams_image" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toStartOf="@+id/rb_listaProductos"
                app:layout_constraintHorizontal_bias="0.88"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dinamico"
                app:srcCompat="@drawable/microsoftteams_image" />

            <ImageView
                android:id="@+id/travagante"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="679dp"
                android:contentDescription="Travagante"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/rb_listaProductos"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.905"
                tools:srcCompat="@drawable/chacarero" />

            <ImageView
                android:id="@+id/dinamico"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:contentDescription="Dinamico"
                app:layout_constraintEnd_toStartOf="@+id/rb_listaProductos"
                app:layout_constraintHorizontal_bias="0.88"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView9"
                app:srcCompat="@drawable/microsoftteams_image" />

            <ImageView
                android:id="@+id/chacarero"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:contentDescription="Chacarero"
                app:layout_constraintEnd_toStartOf="@+id/rb_listaProductos"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView10"
                app:srcCompat="@drawable/chacarero" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toStartOf="@+id/rb_listaProductos"
                app:layout_constraintHorizontal_bias="0.88"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/travagante"
                app:srcCompat="@drawable/microsoftteams_image" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toStartOf="@+id/rb_listaProductos"
                app:layout_constraintHorizontal_bias="0.88"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView6"
                app:srcCompat="@drawable/chacarero" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toStartOf="@+id/rb_listaProductos"
                app:layout_constraintHorizontal_bias="0.88"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView7"
                app:srcCompat="@drawable/antojat" />

            <ImageView
                android:id="@+id/chacarero2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:contentDescription="Chacarero"
                app:layout_constraintEnd_toStartOf="@+id/rb_listaProductos"
                app:layout_constraintHorizontal_bias="0.88"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView8"
                app:srcCompat="@drawable/chacarero" />

            <ImageView
                android:id="@+id/travagante2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:contentDescription="Travagante"
                app:layout_constraintEnd_toStartOf="@+id/rb_listaProductos"
                app:layout_constraintHorizontal_bias="0.88"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chacarero2"
                tools:srcCompat="@drawable/microsoftteams_image" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toStartOf="@+id/rb_listaProductos"
                app:layout_constraintHorizontal_bias="0.88"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/travagante2"
                app:srcCompat="@drawable/antojat" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toStartOf="@+id/rb_listaProductos"
                app:layout_constraintHorizontal_bias="0.88"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chacarero"
                app:srcCompat="@drawable/chacarero" />

            <ImageView
                android:id="@+id/travagante3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:contentDescription="Travagante"
                app:layout_constraintEnd_toStartOf="@+id/rb_listaProductos"
                app:layout_constraintHorizontal_bias="0.88"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView12"
                tools:srcCompat="@drawable/chacarero" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>